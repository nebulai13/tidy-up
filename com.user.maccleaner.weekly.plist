<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Label</key>
    <string>com.user.maccleaner.weekly</string>
    
    <key>ProgramArguments</key>
    <array>
        <string>/usr/local/bin/maccleaner</string>
        <string>scan</string>
        <string>--threshold</string>
        <string>500</string>
    </array>
    
    <key>StartCalendarInterval</key>
    <dict>
        <key>Weekday</key>
        <integer>0</integer> <!-- Sunday -->
        <key>Hour</key>
        <integer>10</integer> <!-- 10 AM -->
        <key>Minute</key>
        <integer>0</integer>
    </dict>
    
    <key>StandardOutPath</key>
    <string>/tmp/maccleaner-weekly.log</string>
    
    <key>StandardErrorPath</key>
    <string>/tmp/maccleaner-weekly-error.log</string>
    
    <key>RunAtLoad</key>
    <false/>
</dict>
</plist>
